<style is:global>
    :root {
        --font-family: "IBM Plex Sans", sans-serif;
        --font-mono: "IBM Plex Mono", monospace;
        --color-dark: #000;
        --color-light: #ffeead;
        --color-primary: hsl(0 , 50%, 75%);
        --color-secondary: hsl(120, 50%, 75%);
        --color-tertiary: hsl(240, 50%, 75%);
        --border-spec: 4px solid #ffcc5c;
        line-height: 1.5;
    }
    body {
        background-color: var(--color-light);
        color: var(--color-dark);
        font-family: var(--font-family);
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
        font-variation-settings: "wdth" 100;
    }
    code {
        font-family: var(--font-mono);
        font-weight: 500;
    }
    h1 {
        font-size: 1.5rem;
    }
    h2 {
        font-size: 1.25rem;
    }
    h3 {
        font-size: 1rem;
    }

    main > section:last-child {
        margin-top: 3rem;
    }
    footer {
        margin-top: 1rem;
    }
    .flow {
        max-inline-size: 60ch;
        margin-inline: auto;
    }
    .flow > * {
		margin: 0;
	}
	.flow > * + * {
		margin-top: .5rem;
	}
</style>
